---
// Event Details Section - Date, time, location and map
---

<section
  id="event-details"
  class="relative min-h-screen flex items-center justify-center bg-gradient-to-b from-[#F5E6D3] to-[#FFF8DC] py-20 px-6 overflow-hidden"
>
  <!-- Optional: Subtle couple photo background (uncomment to use) -->
  <!-- 
  <div class="absolute inset-0 opacity-5">
    <img 
      src="/photos/Invitation Cover.jpg" 
      alt="Couple" 
      class="w-full h-full object-cover"
      style="filter: blur(2px) grayscale(30%);"
    />
  </div>
  -->
  
  <div class="max-w-6xl mx-auto w-full relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-12 fade-in">
      <h2
        class="text-3xl md:text-5xl font-khmer-display text-[#8B0000] mb-4"
        style="text-shadow: 0 2px 8px rgba(139, 0, 0, 0.2); line-height: 1.8; padding: 0.5rem 0;"
      >
        កម្មវិធីសិរីមង្គលអាពាហ៍ពិពាហ៍
      </h2>
      <p
        class="text-xl md:text-3xl font-eng font-bold text-[#D4AF37] tracking-wider"
      >
        CELEBRATION DETAILS
      </p>

      <div class="mt-6">
        <svg width="150" height="40" viewBox="0 0 150 40" class="mx-auto">
          <path
            d="M 10 20 Q 40 10, 75 20 T 140 20"
            stroke="#D4AF37"
            stroke-width="2"
            fill="none"></path>
          <circle cx="40" cy="15" r="3" fill="#FFD700"></circle>
          <circle cx="75" cy="20" r="5" fill="#D4AF37"></circle>
          <circle cx="110" cy="15" r="3" fill="#FFD700"></circle>
        </svg>
      </div>
    </div>

    <!-- Details Cards -->
    <div class="grid md:grid-cols-2 gap-10 mb-12 max-w-5xl mx-auto">
      <!-- Date & Time Card -->
      <div class="fade-in">
        <div
          class="bg-white rounded-2xl shadow-2xl border-2 border-[#D4AF37] p-10 relative overflow-visible h-full hover:shadow-3xl transition-all duration-300 hover:-translate-y-2"
        >
          <!-- Icon -->
          <div class="absolute top-4 right-4 opacity-10">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="#D4AF37">
              <rect
                x="3"
                y="4"
                width="18"
                height="18"
                rx="2"
                stroke="currentColor"
                stroke-width="2"
                fill="none"></rect>
              <line
                x1="3"
                y1="10"
                x2="21"
                y2="10"
                stroke="currentColor"
                stroke-width="2"></line>
              <line
                x1="8"
                y1="2"
                x2="8"
                y2="6"
                stroke="currentColor"
                stroke-width="2"></line>
              <line
                x1="16"
                y1="2"
                x2="16"
                y2="6"
                stroke="currentColor"
                stroke-width="2"></line>
            </svg>
          </div>

          <div class="relative z-10">
            <!-- Title -->
            <div class="flex flex-col items-center mb-8">
              <div
                class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFD700] to-[#D4AF37] flex items-center justify-center mb-4 shadow-lg"
              >
                <svg
                  width="32"
                  height="32"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="white"
                  stroke-width="2"
                  class="text-white"
                >
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
              <div class="text-center">
                <h3 class="text-2xl md:text-3xl font-niradei text-[#8B0000]" style="line-height: 1.8; padding: 0.5rem 0;">
                  កាលបរិច្ឆេទ
                </h3>
                <p
                  class="text-lg md:text-xl font-eng font-semibold text-[#D2691E]"
                >
                  Date & Time
                </p>
              </div>
            </div>

            <!-- Date in Khmer -->
            <div class="mb-6 pb-3 border-b-2 border-[#FFD700] text-center">
              <p class="text-xl md:text-2xl font-khmer text-[#8B4513] mb-2" style="line-height: 1.8; padding: 0.5rem 0;">
                ថ្ងៃសុក្រ ទី២៧ ខែកុម្ភៈ ឆ្នាំ២០២៦
              </p>
              <p class="text-lg md:text-xl font-eng text-[#D2691E]">
                Friday, February 27th, 2026
              </p>
            </div>

            <!-- Time in Khmer -->
            <div class="mt-8 pb-3 border-b-2 border-[#FFD700] text-center">
              <p class="text-xl md:text-2xl font-khmer text-[#8B4513] mb-2" style="line-height: 1.8; padding: 0.5rem 0;">
                ម៉ោង ៥:០០នាទីល្ងាច ជាបន្តបន្ទាប់
              </p>
              <p class="text-lg md:text-xl font-eng text-[#D2691E]">
                5:00 PM onwards
              </p>
            </div>

            <!-- Note -->
            <div
              class="mt-8 p-6 bg-[#FFF8DC] rounded-lg border border-[#D4AF37] mx-auto text-center"
            >
              <p class="text-base font-khmer text-[#8B4513] mb-2" style="line-height: 1.8;">
                សូមអញ្ជើញមកទាន់ពេលវេលា
              </p>
              <p class="text-sm font-eng text-[#D2691E]">
                Please arrive on time
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Location Card -->
      <div class="fade-in">
        <div
          class="bg-white rounded-2xl shadow-2xl border-2 border-[#D4AF37] p-10 relative overflow-visible h-full hover:shadow-3xl transition-all duration-300 hover:-translate-y-2 text-center"
        >
          <!-- Icon -->
          <div class="absolute top-4 right-4 opacity-10">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="#D4AF37">
              <path
                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"
                stroke="currentColor"
                stroke-width="2"
                fill="none"></path>
              <circle cx="12" cy="9" r="2.5" fill="currentColor"></circle>
            </svg>
          </div>

          <div class="relative z-10">
            <!-- Title -->
            <div class="flex flex-col items-center mb-8">
              <div
                class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFD700] to-[#D4AF37] flex items-center justify-center mb-4 shadow-lg"
              >
                <svg
                  width="36"
                  height="36"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="white"
                  stroke-width="2"
                  class="text-white"
                >
                  <path
                    d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"
                  ></path>
                  <circle cx="12" cy="9" r="2.5"></circle>
                </svg>
              </div>
              <div>
                <h3 class="text-2xl md:text-3xl font-niradei text-[#8B0000]" style="line-height: 1.8; padding: 0.5rem 0;">
                  ទីកន្លែង
                </h3>
                <p
                  class="text-lg md:text-xl font-eng font-semibold text-[#D2691E]"
                >
                  Location
                </p>
              </div>
            </div>

            <!-- Location Details -->
            <div class="space-y-6">
              <div class="pb-3 border-b-2 border-[#FFD700] inline-block">
                <p
                  class="text-lg md:text-xl font-khmer text-[#8B4513] mb-3"
                  style="line-height: 1.8; padding: 0.5rem 0;"
                >
                  នៅ គេហដ្ឋានខាងស្រី<br />
                  ស្ថិតនៅ ភូមិកោះដាច់ សង្កាត់កោះដាច់<br />
                  ខណ្ឌជ្រោយចង្វារ រាជធានីភ្នំពេញ
                </p>
                <p
                  class="text-base md:text-lg font-eng text-[#D2691E]"
                  style="line-height: 1.6;"
                >
                  At the Bride's House<br />
                  Koh Dach Village, Sang Kat Koh Dach<br />
                  Khan Chroy Changvar<br />
                  Phnom Penh
                </p>
              </div>

              <!-- Directions Button -->
              <a
                href="https://maps.google.com/?q=Koh+Dach+Village+Chroy+Changvar+Phnom+Penh"
                target="_blank"
                class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-[#D4AF37] to-[#B8860B] text-white font-eng font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 mt-6"
              >
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  class="mr-2"
                >
                  <path
                    d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"
                  ></path>
                  <circle cx="12" cy="9" r="2.5"></circle>
                </svg>
                Get Directions
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="fade-in">
      <div
        class="bg-white rounded-lg shadow-xl border-2 border-[#D4AF37] p-4 md:p-6 overflow-hidden"
      >
        <h3
          class="text-xl md:text-2xl font-eng font-bold text-[#8B0000] mb-4 text-center"
        >
          Venue Location
        </h3>

        <!-- Map Container -->
        <div
          class="relative w-full h-64 md:h-96 rounded-lg overflow-hidden border-2 border-[#D4AF37]"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15635.5!2d104.9358!3d11.5888!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3109513e255e7c49%3A0x3e72f8f7a89b6c36!2sKoh%20Dach%2C%20Phnom%20Penh%2C%20Cambodia!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="grayscale-[0.3] hover:grayscale-0 transition-all duration-500"
          ></iframe>
        </div>

        <!-- Map Note -->
        <p class="text-sm font-eng text-[#8B4513] text-center mt-4 italic">
          Click on the map to explore or use the "Get Directions" button above
        </p>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-12 text-center fade-in">
      <div
        class="inline-block bg-gradient-to-r from-[#FFD700]/20 via-[#D4AF37]/20 to-[#FFD700]/20 px-8 py-6 rounded-lg border-2 border-[#D4AF37]"
      >
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animate on scroll - set initial state then animate
  const detailsFadeElements = document.querySelectorAll(
    "#event-details .fade-in",
  );

  detailsFadeElements.forEach((element, index) => {
    // Set initial state
    gsap.set(element, { opacity: 0, y: 60 });

    gsap.to(element, {
      scrollTrigger: {
        trigger: element,
        start: "top 85%",
        end: "bottom 20%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 0.8,
      delay: index * 0.15,
      ease: "power2.out",
    });
  });

  // Hover effect for cards
  const cards = document.querySelectorAll("#event-details .bg-white");
  cards.forEach((card) => {
    card.addEventListener("mouseenter", () => {
      gsap.to(card, {
        scale: 1.02,
        duration: 0.3,
        ease: "power2.out",
      });
    });

    card.addEventListener("mouseleave", () => {
      gsap.to(card, {
        scale: 1,
        duration: 0.3,
        ease: "power2.out",
      });
    });
  });
</script>
